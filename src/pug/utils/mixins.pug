mixin item(title, descr)
  .item
    h2.item-title= title
    p.item-descr= descr

//- check
mixin check-svg
    svg(viewBox="0 0 20 20" width="20" height="20")
      line(x1="10" y1="20" x2="20" y2="20" stroke="#3B7C68" stroke-width="2")
      line(x1="20" y1="20" x2="20" y2="3" stroke="#3B7C68" stroke-width="2")

//- горизонтальная линия
mixin line-svg  
    svg(viewBox="0 0 20 1" width="20" height="1")
      line(x1="0" y1="0" x2="20" y2="0" stroke="#E2E3E3" stroke-width="1")

//- вертикальная линия
mixin line-vertical-svg  
    svg(viewBox="0 0 1 20" width="1" height="20")
      line(x1="0" y1="0" x2="0" y2="20" stroke="#E2E3E3" stroke-width="1")

//- кнопки войти и зарегистрироваться
mixin buttons-signin-and-signup
  form.form
    input.button.button__title(type="button" value="войти")
    button.button.button_color_purple
      .button__title.button__title_color_white= "зарегистрироваться" 
